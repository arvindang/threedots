<h2>Game Information</h2>
<%= link_to "Next turn", games_path(game_id: @game.id), class: "next_player", remote: true %>

<ul>
  <li>Game ID: <%= @game.id %></li>
  <li>Round: </li>
  <li>Pot Total: </li>
  <li> Turn: <%#= @current_turn.name %> </li>
</ul>

<br><br>

<h2>Player Information</h2>
<%= form_tag(players_path, :method => "post") do %>
  <%= label_tag(:player_name, "Add player:") %>
  <%= text_field_tag(:player_name, nil, placeholder: 'Priyanka Chopra') %>
  <%= hidden_field_tag(:game_id, "#{@game.id}") %>
  <%= submit_tag("Join the Game") %>
<% end %>

<ol>
  <% @current_players.each do |player| %>
  <li>
    <strong><%= player.name %></strong> /
    Order: <%= player.turn %> /
    Dollars: <%= player.currency %> /
    Last Roll:
  </li>
  <% end %>
</ol>

<br><br>

<h2>Roll</h2>
<%= link_to "Next Roll", games_path(game_id: @game.id), class: "next_roll", remote: true %>
<ul>
  <li>L</li>
  <li>R</li>
  <li>C</li>
</ul>

