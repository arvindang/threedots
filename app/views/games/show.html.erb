<section class="container">
  <h1>Welcome to the Matrix</h1>
</section>

<section class="container">
  <form class="form form-default" action="/players" method="post">
    <label for="player_name">Your name</label>
    <input type="text" class="input" name="player_name" placeholder="Priyanka Chopra">
    <input type="hidden" name="game_id" value="<%= @game.id %>">
    <button class="btn roll-btn">Add Player</button>
  </form>

  <ol>
    <!-- <li><strong><%#= @host.name %> (host)</strong></li> -->
    <% @current_players.each do |player| %>
    <li>
      <span class="show"> > </span>

      <%= player.name %>
      (Dollars: <%= player.currency %>)
      (Turn: <%= player.turn %>)
      (Game: <%= player.game_id %>)
    </li>
    <% end %>
  </ol>
</section>

